<h1>Books</h1>
<table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <td><%= link_to book.title, "/books/#{book.id}" %></td>
    <td><%= link_to book.body, "/books/#{book.id}" %></td>
    <% end %>
  </tbody>
</table>



<h2>New Book</h2>
  <%= form_with model: @book do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

<h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>